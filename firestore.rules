rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES AUXILIARES ---
    
    // Verificar si el usuario es administrador
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Verificar si el usuario es validador
    function isValidator() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'validador';
    }

    // Verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verificar si el usuario es dueño del documento (para logs/perfil)
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- COLECCIONES ---

    // 1. Usuarios: 
    // - Admin ve y edita todo.
    // - Usuario ve y edita SU propio perfil.
    match /users/{userId} {
      allow read: if isAdmin() || isOwner(userId);
      allow create, update: if isAdmin() || isOwner(userId);
      allow delete: if (isAdmin() || isOwner(userId)) && resource.data.role != 'admin';
    }

    // 2. Puertas (Devices):
    // - Admin: Control total.
    // - Validador: Puede EDITAR (update), pero NO crear ni eliminar.
    // - Usuario: Solo lectura SI su email está en 'allowedEmails'.
    match /doors/{doorId} {
      allow read: if isAdmin() || isValidator() || (isAuthenticated() && request.auth.token.email in resource.data.allowedEmails);
      allow update: if isAdmin() || isValidator();
      allow create, delete: if isAdmin();
    }

    // 3. Logs de Acceso:
    // - Admin: Ve todo.
    // - Usuario: Crea logs (al abrir puerta) y ve solo los suyos.
    match /access_logs/{logId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // 4. Configuración Global (Settings):
    // - Admin: Lee y escribe.
    // - Usuario: Solo lee (para saber duración de licencias).
    match /settings/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    // 5. Cámaras CCTV:
    // - Admin: Lee y escribe.
    // - Usuario: Lee todo (para simplificar sync), pero solo usa las asignadas.
    match /cameras/{cameraId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
