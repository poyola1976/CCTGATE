rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES AUXILIARES ---
    
    // Verificar si el usuario es administrador
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verificar si el usuario es dueño del documento (para logs/perfil)
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- COLECCIONES ---

    // 1. Usuarios: 
    // - Admin ve y edita todo.
    // - Usuario ve y edita SU propio perfil.
    match /users/{userId} {
      allow read: if isAdmin() || isOwner(userId);
      allow write: if isAdmin() || isOwner(userId);
    }

    // 2. Puertas (Devices):
    // - Admin: Control total.
    // - Usuario: Solo lectura SI su email está en 'allowedEmails'.
    match /doors/{doorId} {
      allow read: if isAdmin() || (isAuthenticated() && request.auth.token.email in resource.data.allowedEmails);
      allow write: if isAdmin();
      allow create: if isAdmin();
    }

    // 3. Logs de Acceso:
    // - Admin: Ve todo.
    // - Usuario: Crea logs (al abrir puerta) y ve solo los suyos.
    match /access_logs/{logId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
  }
}
